    "item": [
        {
            "name": "Quiz APIs",
            "item": [
                {
                    "name": "Create Quiz",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"JavaScript Basics Quiz\",\n  \"description\": \"Test your JS knowledge\",\n  \"courseId\": \"REPLACE_WITH_COURSE_ID\",\n  \"questions\": [\n    {\n      \"questionText\": \"What is 2 + 2?\",\n      \"questionType\": \"multiple-choice\",\n      \"options\": [\n        { \"text\": \"3\", \"isCorrect\": false },\n        { \"text\": \"4\", \"isCorrect\": true },\n        { \"text\": \"5\", \"isCorrect\": false }\n      ],\n      \"points\": 1,\n      \"explanation\": \"Basic arithmetic\"\n    },\n    {\n      \"questionText\": \"JavaScript is single-threaded\",\n      \"questionType\": \"true-false\",\n      \"options\": [\n        { \"text\": \"True\", \"isCorrect\": true },\n        { \"text\": \"False\", \"isCorrect\": false }\n      ],\n      \"points\": 1\n    }\n  ],\n  \"duration\": 10,\n  \"passingScore\": 60,\n  \"attempts\": 3\n}"
                        },
                        "url": {
                            "raw": "{{backend_url}}/api/quiz/create",
                            "host": [
                                "{{backend_url}}"
                            ],
                            "path": [
                                "api",
                                "quiz",
                                "create"
                            ]
                        }
                    }
                },
